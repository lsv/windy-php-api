{
  "name": "lsv/windy-php-api",
  "description": "Windy PHP API client",
  "type": "library",
  "license": "MIT",
  "version": "1.0.0",
  "require": {
    "psr/http-client": "^1.0",
    "symfony/validator": "^7.3",
    "symfony/options-resolver": "^7.3",
    "php-http/discovery": "^1.20",
    "psr/log": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Lsv\\Windy\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "symfony/http-client": "^7.3",
    "php-http/mock-client": "^1.6",
    "php-http/message": "^1.16",
    "nyholm/psr7": "^1.8",
    "friendsofphp/php-cs-fixer": "^3.85",
    "psr/http-factory": "^1.1",
    "infection/infection": "^0.31.1",
    "phpstan/phpstan": "^2.1",
    "rregeer/phpunit-coverage-check": "^0.3.1"
  },
  "autoload-dev": {
    "psr-4": {
      "Lsv\\Windy\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": false,
      "infection/extension-installer": true
    }
  },
  "scripts": {
    "fix": [
      "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix",
      "phpstan",
      "XDEBUG_MODE=coverage phpunit --coverage-text --coverage-clover=.build/coverage/clover.xml --coverage-xml=.build/coverage/xml --coverage-html=.build/coverage/html --log-junit=.build/coverage/junit.xml",
      "coverage-check .build/coverage/clover.xml 100",
      "infection --skip-initial-tests --coverage=.build/coverage --threads=max"
    ]
  }
}
